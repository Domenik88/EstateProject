{% extends 'admin/base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}

    {% embed 'admin/layouts/top-panel.html.twig' %}{% endembed %}
    {% embed 'admin/layouts/left-panel.html.twig' %}{% endembed %}

    <div class="content-wrapper">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Responsive Hover Table</h3>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <h1>Page</h1>

                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ static_page.id }}</td>
                                </tr>
                                <tr>
                                    <th>Title</th>
                                    <td>{{ static_page.title }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ static_page.type }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ static_page.status ? 'Yes' : 'No' }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <a href="{{ path('page_index') }}">back to list</a>

                        <a href="{{ path('page_edit', {'id': static_page.id}) }}">edit</a>

                        {{ include('admin/page/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
