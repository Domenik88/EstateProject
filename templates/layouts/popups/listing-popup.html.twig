{% set listingPopupMapParameters = {
    center: coordinates|default(false),
    initialMarker: true,
    zoom: 13,
    minZoom: 10,
    refreshYelp: true,
    yelpPreloader: true,
} %}


<div class="popup-style popup-style_map js-popup js-popup-listing-popup">
    <div class="popup-style__container">
        <div class="cross-btn js-close-popup"></div>

        <div class="popup-style__scroll-wrap js-smooth-scrollbar">
            <div class="bp-detect hide-on-700 js-bp-detect"></div>
            <div class="popup-style__content ">
                <div class="popup-map-container js-map-interface-wrap js-wrap">
                    <div class="popup-map-container__nav-wrap mb40">
                        {% include 'layouts/modules/slide-menu.html.twig' with {
                            list: [
                                {
                                    text: 'Photos',
                                    linkMod: 'js-content-tab-nav',
                                    contentId: 'gallery',
                                },
                                {
                                    text: 'Map',
                                    linkMod: 'js-content-tab-nav js-map-state-nav',
                                    dataVal: 'map',
                                    contentId: 'map',
                                },
                                {
                                    text: 'Street view',
                                    linkMod: 'js-content-tab-nav js-map-state-nav',
                                    dataVal: 'street-view',
                                    contentId: 'map',
                                },
                                {
                                    text: 'Schools',
                                    linkMod: 'js-content-tab-nav js-map-state-nav',
                                    dataVal: 'schools',
                                    contentId: 'map',
                                },
                                {
                                    text: 'Crime',
                                    linkMod: 'js-content-tab-nav js-map-state-nav',
                                    dataVal: 'crime',
                                    contentId: 'map',
                                },
                                {
                                    text: 'Commute',
                                    linkMod: 'js-content-tab-nav js-map-state-nav',
                                    dataVal: 'commute',
                                    contentId: 'map',
                                },
                                {
                                    text: 'Shop & Eat',
                                    linkMod: 'js-content-tab-nav js-map-state-nav',
                                    dataVal: 'yelp',
                                    contentId: 'map',
                                },
                            ]
                        } only %}
                    </div>

                    <div class="popup-map-container__content content-tabs-container">
                        <div class="popup-map-container__table content-tab js-content-tab" data-content-id="gallery">
                            <div class="popup-map-container__col popup-map-container__col_left">
                                <div class="popup-map-container__scroll-wrap js-smooth-scrollbar">
                                    {% include 'layouts/modules/listing-gallery.html.twig' with {
                                        images: images|default(false),
                                        imgMod: 'js-tab-img'
                                    } only %}
                                </div>
                            </div>

                            <div class="popup-map-container__col popup-map-container__col_right">
                                <div class="popup-map-container__scroll-wrap js-smooth-scrollbar">
                                    {% include 'layouts/modules/agent.html.twig' with {
                                        confidentiality: true,
                                        confidentialityCollapse: false,
                                        agentPhoto: agent.agentPhoto,
                                        agentName: agent.agentName,
                                        agencyName: agent.agencyName,
                                        agentPhone: agent.agentPhone,
                                    } only %}
                                </div>
                            </div>
                        </div>

                        <div class="popup-map-container__table content-tab js-content-tab" data-content-id="map">
                            <div class="popup-map-container__col popup-map-container__col_left">

                            </div>

                            <div class="popup-map-container__col popup-map-container__col_right">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
